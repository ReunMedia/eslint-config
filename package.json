{
  "name": "@reunmedia/eslint-config",
  "version": "1.5.0",
  "description": "Reun Media ESLint configuration",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript"
  ],
  "homepage": "https://github.com/ReunMedia/eslint-config",
  "license": "MIT",
  "author": "Reun Media <company@reun.eu> (https://reun.eu)",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "del-cli dist/* && tsc",
    "lint": "concurrently -p command \"npmPkgJsonLint .\" \"prettier . --check\" \"bun --bun eslint\"",
    "prepack": "bun run lint && bun run build"
  },
  "dependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.30.1",
    "eslint-config-prettier": "^10.1.5"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^22.0.2",
    "@tsconfig/node-ts": "^23.6.1",
    "@tsconfig/recommended": "^1.0.10",
    "@tsconfig/strictest": "^2.0.5",
    "@types/bun": "latest",
    "concurrently": "^9.2.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.30.1",
    "eslint-plugin-vue": "^10.3.0",
    "npm-package-json-lint": "^9.0.0",
    "npm-package-json-lint-config-default": "^8.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.18",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "peerDependencies": {
    "eslint": ">=9",
    "typescript-eslint": ">=8"
  }
}
